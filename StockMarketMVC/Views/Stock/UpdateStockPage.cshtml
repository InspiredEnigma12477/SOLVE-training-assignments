@{
    ViewData["Title"] = "Update Stock";

}

<h1>Update Stock</h1>

<div class="form">
    <form action="/Stock/UpdateStock" method="post">
        <div class="form-group">
            <h4 class="StockID">Enter the Details of Stock ID to be updated: </h4>
            <label for="stockId"></label>
            <input type="hidden" class="form-control" id="stockId" name="stockId" placeholder="Enter Stock Id">
        </div>
        <div class="form-group">
            <label for="stockName">Stock Name</label>
            <input type="text" class="form-control" id="stockName" name="stockName" placeholder="Enter Stock Name">
        </div>
        <div class="form-group">
            <label for="stockSymbol">Stock Symbol</label>
            <input type="text" class="form-control" id="stockSymbol" name="stockSymbol" placeholder="Enter Stock Symbol">
        </div>

        <button type="submit" class="btn btn-primary">Update Stock</button>
    </form>

    <script>
        var url = window.location.href;
        var id = url.substring(url.lastIndexOf('/') + 1);

        document.getElementById('stockId').value = id;

        var stockIdElement = document.getElementsByClassName("StockID")[0];
        stockIdElement.innerHTML += id;
    </script>
</div>
